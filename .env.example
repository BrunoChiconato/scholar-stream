# ---------- AWS ----------
AWS_REGION=us-east-1
SECRET_NAME=scholarstream/snowflake/firehose

# ---------- Firehose ----------
FIREHOSE_NAME=scholarstream-openalex

# ---------- Snowflake (Firehose destination) ----------
# Full account URL: <locator>.<region>.snowflakecomputing.com
# e.g., xy12345.sa-east-1.snowflakecomputing.com
SNOWFLAKE_ACCOUNT_URL=xy12345.sa-east-1.snowflakecomputing.com
FIREHOSE_SNOWFLAKE_USER=FIREHOSE_LOADER

# ---------- Snowflake (for sql/apply.py) ----------
# Do NOT include ".snowflakecomputing.com" here
SNOWFLAKE_ACCOUNT=your_org-your_account
SNOWFLAKE_USER=your_admin_user
SNOWFLAKE_PASSWORD=your_admin_password
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=WH_TRANSFORM
SNOWFLAKE_DATABASE=SCHOLARSTREAM

# ---------- Target schemas/tables ----------
SNOWFLAKE_SCHEMA_RAW=RAW
SNOWFLAKE_SCHEMA_CURATED=CURATED
SNOWFLAKE_TABLE=OPENALEX_EVENTS

# ------------- Keys Directory --------------
KEY_DIR=.keys
